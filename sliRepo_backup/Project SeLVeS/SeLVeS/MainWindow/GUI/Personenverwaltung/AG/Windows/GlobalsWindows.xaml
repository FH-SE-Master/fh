<Window x:Class="SelvesSoftware.GUI.Personenverwaltung.AG.Windows.GlobalsWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:SelvesSoftware.GUI.Personenverwaltung.AG.Windows"
         xmlns:el ="clr-namespace:SelvesSoftware.GUI.Elemente"
        mc:Ignorable="d"
            Title="Allgemeine Parameter" Width="435" Height="185" MinHeight="185" MinWidth="435">
    <Grid Margin="0">
        <Border BorderBrush="Black" BorderThickness="2" Background="AliceBlue"/>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>


            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <el:InputBox x:Name="iptHSatz" Grid.Column="3" Text="" Margin="0" />
            <el:InputBox x:Name="iptHSatzAusz" Grid.Column="3" Grid.Row="1" Text="" Margin="0" />
            <el:InputLabel Content="Stundensatz"  Grid.Column="0" Grid.ColumnSpan="3"/>
            <el:InputLabel Content="Stundensatz Auszahlung"  Grid.Row="1"  Grid.Column="0" Grid.ColumnSpan="3" >
            </el:InputLabel>
            <el:InputBox x:Name="iptFahrtKM" Grid.Column="7" Text="" Margin="0,0,1,0"/>
            <el:InputLabel Grid.Column="4" Content="Fahrtkostenzusatz/KM" Grid.ColumnSpan="3" />

            <Button x:Name="btnSave" Content="Speichern"  Grid.Row="3" Margin="5,10" Click="btnSave_Click" Grid.ColumnSpan="2" Grid.Column="4"  />
            <Button x:Name="btnCancel" Content="Abbrechen" Grid.Column="6"  Grid.Row="3"  Margin="5,10" Grid.ColumnSpan="2" Click="btnCancel_Click"  />

            <Grid Grid.Column="3" Grid.Row="5" Margin="5,0">


                <Grid/>
            </Grid>
        </Grid>






    </Grid>
</Window>
