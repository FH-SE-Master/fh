            <el:InputBox x:Name="MobileNr" Grid.Column="3" Grid.Row="2" Text=""  />
            <el:InputLabel Grid.Row="2" Grid.Column="2" Content="Fahrtkostenzusatz/KM" />

            <Button x:Name="btnSave" Content="Speichern"  Grid.Row="3" Grid.ColumnSpan="2" Margin="40,5,51,5" Grid.Column="1"  />
            <Button x:Name="btnCancel" Content="Abbrechen" Grid.Column="2"  Grid.Row="3"  Margin="89,5,0,5" Grid.ColumnSpan="2"  />

            <Grid Grid.Column="3" Grid.Row="5" Margin="5,0">


                <Grid/>
            </Grid>
        </Grid>






