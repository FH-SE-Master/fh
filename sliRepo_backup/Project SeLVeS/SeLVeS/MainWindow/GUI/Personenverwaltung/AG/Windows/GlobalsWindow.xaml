                <ColumnDefinition Width="132*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <el:InputBox x:Name="FirstName" Grid.Column="1" Grid.Row="1" Text="" Margin="5,0" />
            <el:InputBox x:Name="LastName" Grid.Column="1" Grid.Row="2" Text="" />
