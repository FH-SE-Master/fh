<Page x:Class="SelvesSoftware.PaÜbersicht"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:el ="clr-namespace:SelvesSoftware.GUI.Elemente"
      mc:Ignorable="d" 
       d:DesignHeight="600" d:DesignWidth="800"
	Title="PAÜbersicht">


    <Grid >

        <Border BorderBrush="Black" BorderThickness="2" Background="AliceBlue"/>
        <Grid  Margin="5,5,10,5">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <el:InputLabel Content="Suche:" Grid.Row="1"/>
            <el:InputBox x:Name="search" Grid.Column="1" Grid.Row="1" TextChanged="search_TextChanged"/>
            <el:InputLabel Content="Filter:" Grid.Column="2" Grid.Row="1"/>
            <ComboBox x:Name ="filter" Margin ="5,1.5,30,1.5" Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" SelectionChanged="filter_SelectionChanged" />

            <DataGrid Name="GridÜbersicht" Margin ="30,0" CanUserAddRows="False" CanUserResizeColumns="False" CanUserSortColumns="True" IsReadOnly="True"  SelectionMode="Single" SelectionUnit="FullRow" AutoGenerateColumns="False" ItemsSource="{Binding}" RowHeight="35" SelectionChanged="GridÜbersicht_SelectionChanged" MouseDoubleClick="GridÜbersicht_MouseDoubleClick" Grid.ColumnSpan="4" Grid.RowSpan="18" Grid.Row="2" >
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{Binding MyBackground}"/>
                        <EventSetter x:Name="entMouse" Event="MouseEnter" Handler="Row_MouseEnter"/>
                    </Style>


                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Info"  Binding="{Binding Info}"/>
                    <DataGridTextColumn Header="Vorname"  Binding="{Binding FirstName}" />
                    <DataGridTextColumn Header="Nachname" Binding="{Binding LastName}" />
                    <DataGridTextColumn Header="Adresse " Binding="{Binding Address}" />
                    <DataGridTextColumn Header="Telefonnummer" Binding="{Binding PhoneNumber}" />
                    <DataGridTextColumn Header="Mobil" Binding="{Binding MobilePhone}" />
                    <DataGridTextColumn Header="E-Mail" Binding="{Binding Mail}" />
                    <DataGridTextColumn Header="Aktiv" Binding="{Binding Active}" />

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>


</Page>
