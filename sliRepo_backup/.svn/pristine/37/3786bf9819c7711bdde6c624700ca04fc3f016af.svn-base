<Page x:Class="SelvesSoftware.MainNavigation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
	Title="MainNavigation">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="2" Grid.RowSpan="4" Background="AliceBlue">
            <Grid/>

        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Margin="70,20" CornerRadius="25" Name="Personenverwaltung" Background="LightGray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Personenverwaltung" Margin="20,0,10,0" FontSize="16" FontWeight="Bold"/>
                <Label Name="AgÜbersicht" Content="Auftraggeber - Übersicht" Margin="40,0,20,0" Grid.Row="1" FontSize="14" MaxHeight="30" MouseEnter="AG_Übersicht_MouseEnter" MouseLeave="AG_Übersicht_MouseLeave" MouseLeftButtonDown="AG_Übersicht_MouseLeftButtonDown"/>
                <Label Name="PaÜbersicht" Content="Persönlicher Assistent - Übersicht" Margin="40,0,20,0" Grid.Row="2" FontSize="14" MaxHeight="30" MouseEnter="PA_Übersicht_MouseEnter" MouseLeave="PA_Übersicht_MouseLeave" MouseLeftButtonDown="PA_Übersicht_MouseLeftButtonDown" />
            </Grid>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Margin="70,20" Grid.Row="1" CornerRadius="25" Background="LightGray">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Monatsabrechnung" Margin="20,0,10,0" FontSize="16" FontWeight="Bold"/>
                <Label Name="MAÜbersicht" Content="Übersicht" Margin="40,0,10,0" Grid.Row="1" FontSize="14" MaxHeight="30" MouseEnter="MAÜbersicht_MouseEnter" MouseLeave="MAÜbersicht_MouseLeave" MouseLeftButtonDown="MAÜbersicht_MouseLeftButtonDown"/>
                <Label Content="" Margin="40,0,10,0" Grid.Row="2" FontSize="14" MaxHeight="30"/>
            </Grid>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Margin="70,20" Grid.Row="2" CornerRadius="25" Background="LightGray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Erfolgsrechnung" Margin="20,0,10,0" FontSize="16" FontWeight="Bold"/>
                <Label Content="Übersicht" Margin="40,0,10,0" Grid.Row="1" FontSize="14" MaxHeight="30"/>
                <Label Content="Kontenverwaltung" Margin="40,0,10,0" Grid.Row="2" FontSize="14" MaxHeight="30"/>
            </Grid>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Margin="70,20" Grid.Row="3" CornerRadius="25" Background="LightGray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Statistik" Margin="20,0,10,0" FontSize="16" FontWeight="Bold"/>
                <Label Content="..." Margin="40,0,10,0" Grid.Row="1" FontSize="14" MaxHeight="30"/>
                <Label Content="..." Margin="40,0,10,0" Grid.Row="2" FontSize="14" MaxHeight="30"/>
            </Grid>
        </Border>
    </Grid>
</Page>
