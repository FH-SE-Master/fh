<Window x:Class="SelvesSoftware.GUI.Personenverwaltung.AG.Windows.PAAuswählen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelvesSoftware.GUI.Personenverwaltung.AG.Windows"
        mc:Ignorable="d"
        Title="Persönlichen Assistent auswählen" Height="400" Width="400">
    <Grid>
        <Grid  >
            <Border BorderBrush="Black" BorderThickness="2" Background="AliceBlue">

            </Border>
            <DataGrid Name="GridÜbersicht" Margin="30,30,20,50"  CanUserAddRows="False" CanUserResizeColumns="False" CanUserSortColumns="False" IsReadOnly="True"  SelectionMode="Single" SelectionUnit="FullRow" AutoGenerateColumns="False" ItemsSource="{Binding}" RowHeight="35" SelectionChanged="GridÜbersicht_SelectionChanged" Width="333.6">
                <DataGrid.Columns >
                    <DataGridTextColumn Header="Vorname"  Binding="{Binding FirstName}" Width="150" />
                    <DataGridTextColumn Header="Nachname" Binding="{Binding LastName}" Width="170" />
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="button" Content="Auswählen" HorizontalAlignment="Left" Margin="30,332,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
            <Button x:Name="exit" Content="Abbrechen" HorizontalAlignment="Left" Margin="289,332,0,0" VerticalAlignment="Top" Width="75" Click="exit_Click"/>
        </Grid>
    </Grid>
</Window>
