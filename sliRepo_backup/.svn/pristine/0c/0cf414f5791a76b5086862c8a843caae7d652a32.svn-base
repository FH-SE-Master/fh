<Page x:Class="SelvesSoftware.GUI.Monatsabrechnung.MASideNavigation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="200"
	Title="MASideNavigation">
    <Grid   Margin="0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>



        <Border BorderBrush="Black" BorderThickness="2" Background="#FFBDBDBD"/>



        <Label Content="Navigation" Margin="0"  FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="16" />
        <Border BorderBrush="Black" BorderThickness="2" Grid.Row="1" Background="AliceBlue" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="125*"/>
                </Grid.RowDefinitions>
                <Label Name="MA_Übersicht" Content="Übersicht" Grid.Row="0" Margin="5"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14" MouseEnter="MA_Übersicht_MouseEnter" MouseLeave="MA_Übersicht_MouseLeave" MouseLeftButtonDown="MA_Übersicht_MouseLeftButtonDown"/>
                <Label Name="MA_Hinzufügen"  Grid.Row="1" Margin="5"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14"  MouseEnter="MA_Hinzufügen_MouseEnter" MouseLeave="MA_Hinzufügen_MouseLeave" MouseLeftButtonDown="MA_Hinzufügen_MouseLeftButtonDown">
                    <Label.Content>
                        <AccessText TextWrapping="Wrap" Text="Monatsabrechnung hinzufügen" TextAlignment="Center"/>
                    </Label.Content>
                </Label>
                <Label Name ="MA_Bearbeiten"  Grid.Row="2" Margin="5"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14" MouseEnter="MA_Bearbeiten_MouseEnter" MouseLeave="MA_Bearbeiten_MouseLeave" MouseLeftButtonDown="MA_Bearbeiten_MouseLeftButtonDown">
                    <Label.Content>
                        <AccessText TextWrapping="Wrap" Text="Monatsabrechnung bearbeiten" TextAlignment="Center"/>
                    </Label.Content>
                </Label>

            </Grid>
        </Border>


    </Grid>
</Page>
